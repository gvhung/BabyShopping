@model IEnumerable<BabyShop.Models.ProductImagesModel>
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Product.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#imageZoom').attr('href', jsnUtil.imageZoomDir + '@Model.First().ZoomImageURL');
        $('#imagePropduct').attr('src', jsnUtil.imageDir + '@Model.First().MidImageURL');
    });
</script>
<script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Scripts/ProductDetail.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.jqzoom-core.js")" type="text/javascript"></script>
<div class="inner-section">
    <div class="shadowBox fl">
        <div class="shadowTop">
            &nbsp;</div>
        <div class="shadowCont">
            <div class="clearfix">
                <a id="imageZoom" href="" class="MyCLASS" rel='gal1' title="">
                    <img id="imagePropduct" src="" title="" alt="" />
                </a>
            </div>
            <div class="cl">
            </div>
            <div class="rollthumb clearfix">
                <p class="rollTxt">
                    Roll over image to zoom in
                </p>
                <ul id="thumblist" class="clearfix">
                    @{bool flag = true;}
                    @foreach (var productImage in Model)
                    {
                        if (flag)
                        {
                        <li><a class="zoomThumbActive" href='javascript:void(0);' rel="{gallery: 'gal1', smallimage: '@Url.Content("~/Content/Images/" + productImage.MidImageURL)',
                            largeimage: '@Url.Content("~/Content/Zoom/" + productImage.ZoomImageURL)'}">
                            <img src='@Url.Content("~/Content/Images/" + productImage.SmallImageURL)' alt="rollingThumb1"/>
                        </a></li>
                            flag = false;
                        }
                        else
                        {
                        <li><a  href='javascript:void(0);' rel="{gallery: 'gal1', smallimage: '@Url.Content("~/Content/Images/" + productImage.MidImageURL)',
                            largeimage: '@Url.Content("~/Content/Zoom/" + productImage.ZoomImageURL)'}">
                            <img src='@Url.Content("~/Content/Images/" + productImage.SmallImageURL)' alt="rollingThumb1"/>
                        </a></li>
                            
                        }

                    }
                </ul>
                <div class="cl">
                </div>
            </div>
        </div>
        <div class="shadowBot">
            &nbsp;</div>
    </div>
    <div class="shadowBox fr">
        <div class="shadowTop">
            &nbsp;</div>
        <div class="shadowCont">
            <div class="detailCont">
                <h3>
                    @ViewBag.ProductName</h3>
                <div class="cartRow">
                    <div class="price fl">
                        <b>Details</b></div>
                    <div class="price blueColr fl">
                        <b>Fabric &amp; Care</b></div>
                    <div class="price blueColr fl">
                        <b>Shipping</b></div>
                    <div class="cl">
                    </div>
                </div>
                <p>
                    @ViewBag.Description
                </p>
            </div>
            <div class="detailCont">
                <div class="cartRow">
                    <b>Ordering</b>
                </div>
                <br />
                <form action="@Url.Action("ShoppingCart", "Shop")" method="post" class="formCont">
                <input id="hdnProductId" name = "ProductId" type="hidden" value="@ViewBag.ProductId" />
                <div class="formRow">
                    <label>
                        Size</label>&nbsp;&nbsp;
                    <select name="">
                        <option>Choose an Option</option>
                    </select>
                    <div class="cl">
                    </div>
                </div>
                <br />
                <div class="formRow">
                    <label>
                        Color</label>
                    <select name="">
                        <option selected="selected">Choose an Option</option>
                    </select>
                    <div class="cl">
                    </div>
                </div>
                <br />
                <div class="formRow">
                    <label>
                        Price</label>
                    $@ViewBag.Price
                    <div class="cl">
                    </div>
                </div>
                <div class="formRow">
                    <label>
                        Quantity</label>
                    <input name="Quantity" id="Quantity" type="text" value="1" style="width: 50px;" />
                    <input type="submit" value="" class="addToCart" id="btnAddToCart" />
                    <div class="cl">
                    </div>
                </div>
                </form>
            </div>
        </div>
        <div class="shadowBot">
            &nbsp;</div>
    </div>
    <div class="cl">
    </div>
</div>
